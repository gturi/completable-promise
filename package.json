{
  "name": "completable-promise",
  "version": "1.0.0",
  "description": "CompletablePromise library allows to create a Promise instance that does not start its resolution upon its declaration.",
  "keywords": [
    "completable-promise",
    "completable",
    "promise",
    "promise-library"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "coverage": "node .github/script/generate-coverage.mjs",
    "doc": "node .github/script/generate-typedoc.mjs",
    "lint": "eslint \"src/**\" \"test/**\"",
    "prepublishOnly": "npm test",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlamingTuri/completable-promise.git"
  },
  "author": "Giacomo Venturini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FlamingTuri/completable-promise/issues"
  },
  "homepage": "https://github.com/FlamingTuri/completable-promise#readme",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^9.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.2.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
